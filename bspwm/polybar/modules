[module/win]
type = internal/xwindow

; Available tags:
;   <label> (default)
format = <label>
format-background = #EB97F2
format-foreground = #030315
format-padding = 1

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 20

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = #030315

