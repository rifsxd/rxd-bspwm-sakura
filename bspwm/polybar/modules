label-sticky = " | Sticky"
label-private = " | Private"
label-marked = " | Marked"

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/mpris]
type = custom/script
exec = ~/.config/bspwm/polybar/extra-modules/mpris.py -f '{icon} {artist} - {title}'
tail = true
click-left = ~/.config/bspwm/polybar/extra-modules/mpris.py previous &
click-right = ~/.config/bspwm/polybar/extra-modules/mpris.py next &
click-middle = ~/.config/bspwm/polybar/extra-modules/mpris.py play-pause &
format-foreground = #EC98F3
format = <label>
label-font = 5


;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date]
type = internal/date

interval = 1.0

time = %I:%M %p
time-alt = %A, %d %B %Y

format = <label>
format-prefix = " "
format-prefix-font = 3
format-prefix-foreground = #5EBCE1

label = %time%
label-font = 4
label-foreground = #EC98F2

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

; If you use both a wired and a wireless network, add both modules in config.
[module/ethernet]
type = internal/network
interface = ${system.network_interface}

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-font = 3
format-connected-prefix-foreground = #5EBCE1
label-connected-foreground= #EE99F3

format-disconnected = <label-disconnected>
format-disconnected-prefix = " "
format-disconnected-prefix-font = 3
format-disconnected-prefix-foreground = #AA7EE1

label-connected = "%{A1:networkmanager_dmenu &:}%downspeed% | %upspeed%%{A}"
label-disconnected = "%{A1:networkmanager_dmenu &:}Offline%{A}"

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

